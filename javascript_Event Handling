        </div>
        
        <div class="history">
            <h2>Color History</h2>
            <p>Click on any saved color to apply it</p>
            <div class="color-history" id="color-history">
                <!-- Color history will be added here by JavaScript -->
            </div>
        </div>
        
        <div class="instructions">
            <h3>How It Works</h3>
            <ul>
                <li>Click "Change Color" to generate a random background color</li>
                <li>Click "Save Color" to add the current color to your history</li>
                <li>Click any color in the history to apply it again</li>
                <li>Click "Reset" to return to the original gradient</li>
                <li>The counter keeps track of how many colors you've generated</li>
            </ul>
        </div>
    </div>

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get DOM elements
            const changeColorBtn = document.getElementById('change-color');
            const saveColorBtn = document.getElementById('save-color');
            const resetColorBtn = document.getElementById('reset-color');
            const colorValue = document.getElementById('color-value');
            const colorBox = document.getElementById('color-box');
            const colorHistory = document.getElementById('color-history');
            const counter = document.getElementById('counter');
            
            // Initialize variables
            let colorCount = 0;
            let savedColors = [];
            const originalBackground = document.body.style.background;
            
            // Function to generate a random hex color
            function getRandomColor() {
                const letters = '0123456789ABCDEF';
                let color = '#';
                for (let i = 0; i < 6; i++) {
                    color += letters[Math.floor(Math.random() * 16)];
                }
                return color;
            }
            
            // Function to change the background color
            function changeBackgroundColor() {
                const randomColor = getRandomColor();
                document.body.style.background = randomColor;
                colorValue.textContent = randomColor;
                colorBox.style.backgroundColor = randomColor;
                
                // Update counter
                colorCount++;
                counter.textContent = colorCount;
            }
            
            // Function to save the current color
            function saveCurrentColor() {
                const currentColor = colorValue.textContent;
                
                // Check if color is already saved
                if (!savedColors.includes(currentColor)) {
                    savedColors.push(currentColor);
                    
                    // Create a new color element
                    const colorElement = document.createElement('div');
                    colorElement.className = 'history-color';
                    colorElement.style.backgroundColor = currentColor;
                    colorElement.setAttribute('data-color', currentColor);
                    
                    // Add click event to apply the saved color
                    colorElement.addEventListener('click', function() {
                        const savedColor = this.getAttribute('data-color');
                        document.body.style.background = savedColor;
                        colorValue.textContent = savedColor;
                        colorBox.style.backgroundColor = savedColor;
                    });
                    
                    // Add to history
                    colorHistory.appendChild(colorElement);
                }
            }
            
            // Function to reset to original background
            function resetBackground() {
                document.body.style.background = originalBackground;
                colorValue.textContent = '#6A11CB';
                colorBox.style.backgroundColor = '#6A11CB';
            }
            
            // Add event listeners
            changeColorBtn.addEventListener('click', changeBackgroundColor);
            saveColorBtn.addEventListener('click', saveCurrentColor);
            resetColorBtn.addEventListener('click', resetBackground);
            
            // Add keyboard shortcut (Spacebar to change color)
            document.addEventListener('keydown', function(event) {
                if (event.code === 'Space') {
                    event.preventDefault(); // Prevent scrolling
                    changeBackgroundColor();
                }
            });
            
            // Add instructions for keyboard shortcut
            const instructions = document.querySelector('.instructions ul');
            const keyboardInstruction = document.createElement('li');
            keyboardInstruction.textContent = 'Press SPACEBAR for a quick color change';
            instructions.appendChild(keyboardInstruction);
        });
    </script>
</body>
